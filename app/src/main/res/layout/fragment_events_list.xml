<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground">

    <TextView
        android:id="@+id/setTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:alpha="0.7"
        android:text="Set your times (in minutes):"
        android:textColor="@color/textColorPrimary"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/customTimeLayout"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setTimeTextView"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/originTimeInputLayout"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/originTime"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:gravity="center"
                android:hint="Morning time"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/textColorPrimary" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/destinationTimeInputLayout"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/destinationTime"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:gravity="center"
                android:hint="Before an event"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/textColorPrimary" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/emptyViewNoEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="15dp"
            android:alpha="0.7"
            android:src="@drawable/ic_event_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:text="No Relevant Events Found"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:id="@+id/eventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customTimeLayout" />

</RelativeLayout>