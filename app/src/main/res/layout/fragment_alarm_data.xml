<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/eventInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:alpha="0.75"
            android:elevation="5dp"
            android:background="@color/rawBackground"
            android:orientation="horizontal"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/dateLayout"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/monthInYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-6dp"
                    android:fontFamily="thin"
                    android:gravity="center"
                    android:hint="FEB"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/dayInMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/monthInYear"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:hint="16"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="35sp" />

            </RelativeLayout>

            <View
                android:id="@+id/separatorView"
                android:layout_width="2dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:background="@color/divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/eventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:hint="TITLE"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventTitle"
                    android:hint="10:00"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventTitle"
                    android:layout_toEndOf="@+id/startTime"
                    android:layout_toRightOf="@+id/startTime"
                    android:hint="11:00"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/startTime"
                    android:maxLines="2"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/wakeUpTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/eventInfoLayout"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:hint="Wakeup time"
            android:textColor="@color/textColorPrimary"
            android:textSize="55sp" />

        <ImageView
            android:id="@+id/addAlarmImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/wakeUpTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:alpha="0.7"
            android:src="@drawable/ic_alarm_add_white_24dp" />


        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:padding="12dp">

            <!--<Button-->
            <!--android:id="@+id/addAlarm"-->
            <!--style="@style/Widget.AppCompat.Button.Borderless"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:text="Add alarm"-->
            <!--android:theme="@style/MyButton"-->
            <!--android:layout_marginBottom="45dp"-->
            <!--android:visibility="visible" />-->


            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addAlarm"
                android:alpha="0.7"
                android:text="Timeline:"
                android:textColor="@color/textColorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/detailsWakeUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details"
                android:alpha="0.7"
                android:textColor="@color/textColorSecondary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detailsLeaveHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsWakeUp"
                android:alpha="0.7"
                android:textColor="@color/textColorSecondary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detailsDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsLeaveHome"
                android:alpha="0.7"
                android:textColor="@color/textColorSecondary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detailsETA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsDuration"
                android:alpha="0.7"
                android:textColor="@color/textColorSecondary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detailsEventStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsDuration"
                android:alpha="0.7"
                android:textColor="@color/textColorSecondary"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/locationErrorMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:alpha="0.7"
            android:textColor="@color/textColorSecondary"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>
